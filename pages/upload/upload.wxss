/* pages/upload/upload.wxss */

page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding: 0 0;
  justify-content: space-around;
}

.iaudio {
  width: 550rpx;
}

.uploader {
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}

.uploader-item {
  width: 200rpx;
  height: 85rpx;
}

.submitBtn {
  width: 80%;
  margin-top: 15px;
}

.gobackBtn {
  width: 80%;
  margin-top: 15px;
}

.loginLabel {
  color: gray;
  font-size: 15px;
}

.inputText {
  float: right;
  text-align: right;
  margin-right: 22px;
  margin-top: 11px;
  font-size: 15px;
}

.inputView {
  padding: 5px;
  margin-bottom: 20rpx;
  background-color: white;
  line-height: 45px;
  border: solid 1px whitesmoke;
}
