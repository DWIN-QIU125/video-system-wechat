/**index.wxss**/

.refresh {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.search-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin: 10rpx 0 20rpx 0;
}

.search-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 85%;
  height: 60rpx;
  background-color: rgb(247, 249, 250);
  font-size: 25rpx;
  color: grey;
}

.search-icon {
  width: 35rpx;
  height: 35rpx;
  margin: 0 20rpx 0 20rpx;
}

.video-container {
  width: 100%;
  height: 1000rpx;
}

.scroll-view-item {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.video-item {
  margin: 5px 5px 5px 5px;
}
