/* components/video-item.wxss */

.container {
  width: 350rpx;
  height: 380rpx;
  background-color: yellowgreen;
  border-radius: 5px;
}

.cover-container {
  position: relative;
  width: 100%;
  height: 250rpx;
  background-color: pink;
  border-radius: 5px;
  /* 消除两个view标签之间的间隙 */
  vertical-align: bottom;
}

.desc-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 130rpx;
  background-color: rgb(175, 170, 170);
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

.video-title {
  width: 90%;
  height: 80rpx;
  background-color: wheat;
  margin: 10rpx auto;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2; /*这个数字是设置要显示省略号的行数*/
  -webkit-box-orient: vertical;
}

.video-detail {
  position: absolute;
  left: 5%;
  bottom: 0;
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 50rpx;
}

.detail-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 25rpx;
  line-height: 50rpx;
  color: white;
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
